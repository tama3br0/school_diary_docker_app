<main>
    <h1>ようこそ！
        <% if @role == 'teacher' %>
            <%= @name %>せんせい
        <% else %>
            <%= @grade %>ねん<%= @class_num %>くみの<%= @student_num %>ばんさん
        <% end %>
    </h1>
    <ul>
        <li class="write_diary_button"><%= link_to 'にっきをかく', new_diary_path %></li>
        <li class="read_diary_button"><%= link_to 'にっきをよむ', choose_diary_diaries_path %></li>
        <li class="stamp_card_button"><%= link_to 'スタンプカード', stamp_path(current_user.id) %></li>
        <% if @role == 'teacher' %>
            <li class="show_diary_button"><%= link_to 'にっきをみる', classes_path %></li>
        <% end %>
    </ul>
